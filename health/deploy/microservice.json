{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "uniqueResourceNamePrefix": {
            "type": "string"
        }
    },
    "variables": {
        "resourceNamePrefix": "[concat(parameters('uniqueResourceNamePrefix'),'-health')]",

        "applicationInsightsName": "[concat(variables('resourceNamePrefix'), '-ai')]",

        "functionsAppServicePlanName": "[concat(variables('resourceNamePrefix'),'-asp')]",
        "functionsApiAppName": "[concat(variables('resourceNamePrefix'),'-api')]",

        "blobAccountName": "[concat(parameters('uniqueResourceNamePrefix'),'healthblob')]"
    },
    "resources": [
        {
            "name": "[variables('applicationInsightsName')]",
            "type": "Microsoft.Insights/components",
            "apiVersion": "2014-04-01",
            "location": "[resourceGroup().location]",
            "kind": "other",
            "properties": {
                "applicationId": "[variables('applicationInsightsName')]"
            }
        },
        {
            "name": "[variables('blobAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[resourceGroup().location]",
            "apiVersion": "2017-06-01",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "BlobStorage",
            "properties": {
                "accessTier": "Hot",
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            }
        },
        {
            "name": "[variables('functionsAppServicePlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "apiVersion": "2016-09-01",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            },
            "kind": "functionapp",
            "properties": {
                "workerTierName": null,
                "adminSiteName": null,
                "hostingEnvironmentProfile": null,
                "perSiteScaling": false,
                "reserved": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            }
        },
        {
            "name": "[variables('functionsApiAppName')]",
            "type": "Microsoft.Web/sites",
            "location": "[resourceGroup().location]",
            "apiVersion": "2016-08-01",
            "kind": "functionapp",
            "properties": {
                "enabled": true,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('functionsAppServicePlanName'))]",
                "reserved": false
            },
            "identity": {
                "type": "systemAssigned"
            },
            "resources": [
                {
                    "name": "appsettings",
                    "type": "config",
                    "apiVersion": "2014-11-01",
                    "properties": {
                        "FUNCTIONS_EXTENSION_VERSION": "beta",
                        "AzureWebJobsSecretStorageType": "Blob",
                        "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('blobAccountName'), ';AccountKey=', listKeys(variables('blobAccountName'),'2015-05-01-preview').key1)]",
                        "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('Microsoft.Insights/components', variables('applicationInsightsName')), '2014-04-01').InstrumentationKey]",
                        "SYSTEM_NAME_PREFIX": "[parameters('uniqueResourceNamePrefix')]"
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', variables('functionsApiAppName'))]"
                    ]
                }
            ],
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('functionsAppServicePlanName'))]"
            ]
        }
    ]
}
