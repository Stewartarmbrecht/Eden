{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "uniqueResourcesystemName": {
            "type": "string"
        }
    },
    "variables": {
        "resourcesystemName": "[concat(parameters('uniqueResourcesystemName'),'-proxy')]",

        "applicationInsightsName": "[concat(variables('resourcesystemName'), '-ai')]",

        "functionsAppServicePlanName": "[concat(variables('resourcesystemName'),'-asp')]",
        "functionsApiProxyAppName": "[concat(variables('resourcesystemName'),'-api')]"
    },
    "resources": [
        {
            "name": "[variables('applicationInsightsName')]",
            "type": "Microsoft.Insights/components",
            "apiVersion": "2014-04-01",
            "location": "[resourceGroup().location]",
            "kind": "other",
            "properties": {
                "applicationId": "[variables('applicationInsightsName')]"
            }
        },
        {
            "name": "[variables('functionsAppServicePlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "apiVersion": "2016-09-01",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            },
            "kind": "functionapp",
            "properties": {
                "perSiteScaling": false,
                "reserved": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            }
        },
        {
            "name": "[variables('functionsApiProxyAppName')]",
            "type": "Microsoft.Web/sites",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-08-01",
            "kind": "functionapp",
            "properties": {
                "enabled": true,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('functionsAppServicePlanName'))]",
                "reserved": false
            },
            "resources": [
                {
                    "name": "appsettings",
                    "type": "config",
                    "apiVersion": "2015-08-01",
                    "properties": {
                        "ROUTING_EXTENSION_VERSION": "~0.2",
                        "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('Microsoft.Insights/components', variables('applicationInsightsName')), '2014-04-01').InstrumentationKey]",
                        "CategoriesMicroserviceApiAppName": "[concat(parameters('uniqueResourcesystemName'),'-categories-api')]",
                        "ImagesMicroserviceApiAppName": "[concat(parameters('uniqueResourcesystemName'),'-images-api')]",
                        "AudioMicroserviceApiAppName": "[concat(parameters('uniqueResourcesystemName'),'-audio-api')]",
                        "TextMicroserviceApiAppName": "[concat(parameters('uniqueResourcesystemName'),'-text-api')]"
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', variables('functionsApiProxyAppName'))]"
                    ]
                }
            ],
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('functionsAppServicePlanName'))]"
            ]
        }
    ],
    "outputs": {
        "functionsApiProxyHostName": {
            "type": "string",
            "value": "[reference(variables('functionsApiProxyAppName')).hostNames[0]]"
        }
    }
}
